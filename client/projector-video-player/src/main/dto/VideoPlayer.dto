package "projector-video-player":org.teamapps.projector.component.videoplayer;

import org.teamapps.projector.component.DtoComponent;

/**
 * May also be used as audio player...
 */
class DtoVideoPlayer extends DtoComponent {
	required mutable String url; //the url of the video
	mutable boolean autoplay;
	mutable boolean controlsVisible;
	required mutable String posterImageUrl;
	required mutable PosterImageSize posterImageSize;
	mutable int playerProgressIntervalSeconds; // if 0, then send NO events
	required mutable String backgroundColor;
	required mutable PreloadMode preloadMode;

	command play();
	command pause();
	command jumpTo(int timeInSeconds);

	event errorLoading();
	event playerProgress(int positionInSeconds);
	event ended();
}

enum PosterImageSize {
    CONTAIN = "contain",
    COVER = "cover",
    FILL = "fill"
}

enum PreloadMode {
	NONE = "none",
	METADATA = "metadata",
	AUTO = "auto"
}
