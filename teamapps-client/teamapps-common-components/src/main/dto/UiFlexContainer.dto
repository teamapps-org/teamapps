package org.teamapps.dto;

managed class UiFlexContainer extends UiComponent {
	List<UiComponent*> components;

	UiCssFlexDirection flexDirection = UiCssFlexDirection.ROW;
	UiCssAlignItems alignItems = UiCssAlignItems.STRETCH;
	UiCssJustifyContent justifyContent = UiCssJustifyContent.START;

	command addComponent(UiComponent* component);
	command removeComponent(UiComponent* component);
}

enum UiCssFlexDirection {
	ROW = "row",
    ROW_REVERSE = "row-reverse",
    COLUMN = "column",
    COLUMN_REVERSE = "column-reverse",
    INITIAL = "initial",
    INHERIT = "inherit"
}

enum UiCssAlignItems {
	STRETCH = "stretch",
    CENTER = "center",
    FLEX_START = "flex-start",
    FLEX_END = "flex-end",
    BASELINE = "baseline",
    INITIAL = "initial",
    INHERIT = "inherit"
}

enum UiCssJustifyContent {
	START = "flex-start",
	END = "flex-end",
	CENTER = "center",
	SPACE_BETWEEN = "space-between",
	SPACE_AROUND = "space-around",
	SPACE_EVENLY = "space-evenly",
	INITIAL = "initial",
	INHERIT = "inherit"
}

	
	
	
	
	
