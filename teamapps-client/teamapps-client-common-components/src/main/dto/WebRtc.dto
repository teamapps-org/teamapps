package org.teamapps.dto;

managed class WebRtcPublisher extends Component {
	WebRtcPublishingSettings publishingSettings;
	boolean microphoneMuted = false;
	String backgroundImageUrl;

    command publish(WebRtcPublishingSettings settings);
    command unPublish();
    command setMicrophoneMuted(boolean microphoneMuted);
    command setBackgroundImageUrl(String backgroundImageUrl);

    event publishingFailed(WebRtcPublishingErrorReason reason);

    static command isChromeExtensionInstalled() returns boolean;
}

managed class WebRtcPlayer extends Component {
	WebRtcPlayingSettings playingSettings;
	String backgroundImageUrl;

	command play(WebRtcPlayingSettings settings);
	command stopPlaying();
	command setBackgroundImageUrl(String backgroundImageUrl);

	static command getPlayableVideoCodecs() returns List<VideoCodec>;
}

enum AudioCodec {
	OPUS
}

enum VideoCodec {
	H264,
	VP8,
	VP9
}

class WebRtcPlayingSettings {
	required String signalingUrl;
	required String wowzaApplicationName;
	required String streamName;
}

class WebRtcPublishingSettings {
	required String signalingUrl;
	required String wowzaApplicationName;
	required String streamName;
	required WebRtcPublishingMediaSettings mediaSettings;
}

class WebRtcPublishingMediaSettings {
	boolean audio = true;
	AudioCodec audioCodec = AudioCodec.OPUS;
	int audioKiloBitsPerSecond = 64;

	boolean video = true;
	VideoCodec videoCodec = VideoCodec.H264;
	int videoWidth = 720;
	int videoHeight = 480;
	int videoFps = 25;
	int videoKiloBitsPerSecond = 400;

	boolean screen = false;
}

enum WebRtcPublishingErrorReason {
	CHROME_SCREEN_SHARING_EXTENSION_NOT_INSTALLED,
	CANNOT_GET_SCREEN_MEDIA_STREAM,
	OTHER
}
