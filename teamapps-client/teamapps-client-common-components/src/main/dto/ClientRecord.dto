package org.teamapps.dto;

class ClientRecord {
    Dictionary<Object> values;
    String asString;
}

class IdentifiableClientRecord extends ClientRecord {
	int id;
}

class HierarchicalClientRecord extends IdentifiableClientRecord {
	Integer parentId;
	boolean expanded;
	boolean lazyChildren;
	boolean selectable = true;
}

class TreeRecord extends HierarchicalClientRecord {
	String displayTemplateId = null; // null == use asString
}

class ComboBoxTreeRecord extends TreeRecord {
	String dropDownTemplateId = null; // null == use asString
}

class CalendarEventClientRecord extends IdentifiableClientRecord {
    String timeGridTemplateId;   // null = use default
    String dayGridTemplateId;    // null = use default
    String monthGridTemplateId;  // null = use default

	long start;
    long end;
    boolean allDay;
    boolean allowDragOperations;

    String icon;
    String title;

    String backgroundColor;
    String borderColor;
    CalendarEventRenderingStyle rendering;
}
