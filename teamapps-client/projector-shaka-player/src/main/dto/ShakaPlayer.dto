package "projector-shaka-player":org.teamapps.projector.component.shakaplayer;

import org.teamapps.projector.component.DtoComponent;

class DtoShakaPlayer extends DtoComponent {
    String hlsUrl;
    String dashUrl;
    String posterImageUrl;
    PosterImageSize posterImageSize;
    int timeUpdateEventThrottleMillis;
    String backgroundColor;
    boolean autoplay;
    TrackLabelFormat trackLabelFormat;
    boolean videoDisabled;
    long timeMillis;
    String preferredAudioLanguage;

	command setUrls(String hlsUrl, String dashUrl);
	command setTime(long timeMillis);
	command selectAudioLanguage(String language, String role);
	command setPosterImageUrl(String posterImageUrl);
    command setPosterImageSize(PosterImageSize posterImageSize);
    command setBackgroundColor(String backgroundColor);
    command setVideoDisabled(boolean videoDisabled);

	event errorLoading();
	event manifestLoaded(DtoShakaManifest manifest);
	event timeUpdate(long timeMillis);
	event ended();

	static command setDistinctManifestAudioTracksFixEnabled(boolean enabled);
}

enum TrackLabelFormat {
	LABEL,
	LANGUAGE,
	LANGUAGE_ROLE,
	ROLE;
}

class DtoShakaManifest {
    required List<DtoShakaManifestVariant> variants;
}

class DtoShakaManifestVariant {
	int id;
	DtoShakaAudioStream audio;
	DtoShakaVideoStream video;
	int bandwidth;
}

abstract class DtoAbstractShakaStream {
	int id;
	String originalId;
	String mimeType;
	String codecs;
	int bandwidth;
	String label;
	List<String> roles;
}

class DtoShakaAudioStream extends DtoAbstractShakaStream {
    String language;
    int channelsCount;
    int audioSamplingRate;
}

class DtoShakaVideoStream extends DtoAbstractShakaStream {
    int frameRate;
    String pixelAspectRatio;
    int width;
    int height;
}

enum PosterImageSize {
    CONTAIN = "contain",
    COVER = "cover",
    FILL = "fill"
}
