package org.teamapps.dto;

@TypeScriptFactory
class UiLocalDate {
    required int year;
    required int month;
    required int day;
}

class UiLocalDateField extends UiField implements UiTextInputHandlingField {
    boolean showDropDownButton = true;
	boolean showClearButton;
	boolean favorPastDates = false;
	String locale;
	UiDateTimeFormatDescriptor dateFormat = null; // if null, UiConfiguration.dateFormat applies
	UiLocalDate defaultSuggestionDate; // null == today
	boolean shuffledFormatSuggestionsEnabled;
	UiLocalDateFieldDropDownMode dropDownMode = UiLocalDateFieldDropDownMode.CALENDAR_SUGGESTION_LIST;
	String placeholderText;

    command update(UiLocalDateField config);
}

enum UiLocalDateFieldDropDownMode {
    CALENDAR, CALENDAR_SUGGESTION_LIST, SUGGESTION_LIST;
}
